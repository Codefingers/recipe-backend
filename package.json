{
  "name": "recipe-backend",
  "version": "1.0.0",
  "description": "Recipe backend service using AWS CDK",
  "main": "index.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "deploy": "cdk deploy",
    "destroy": "cdk destroy",
    "test": "vitest",
    "synth": "cdk synth",
    "invokeGetRecipes": "sam local invoke GetRecipesFunction9A52C17F -t cdk.out/RecipeBackendStack.template.json",
    "invokeGetRecipe": "sam local invoke GetRecipeFunctionC7D358C7 -t cdk.out/RecipeBackendStack.template.json -e local/getRecipeEvent.json",
    "test:handlers": "npm run test:create-recipe && npm run test:get-recipes"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.134",
    "@types/node": "^22.0.0",
    "@types/uuid": "^9.0.8",
    "@vitest/coverage-v8": "^1.3.1",
    "aws-cdk": "^2.130.0",
    "aws-cdk-lib": "^2.130.0",
    "constructs": "^10.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.525.0",
    "@aws-sdk/lib-dynamodb": "^3.525.0",
    "esbuild": "^0.25.1",
    "uuid": "^9.0.1"
  }
}
